<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/contDropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerTitlebar1"
        android:visibility="visible"></RelativeLayout>

    <LinearLayout
        android:id="@+id/containerTitlebar1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50dp"
        android:layout_alignParentTop="true"
        android:background="@color/c_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x8dp"
        android:paddingRight="@dimen/x8dp">

        <TextView
            android:layout_marginLeft="@dimen/x5dp"
            android:id="@+id/btnLeft1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_back"
            android:drawablePadding="@dimen/x5dp"
            android:drawableTint="@color/title_color"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:textColor="@color/c_black"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnRight2"
            android:padding="@dimen/x10dp"
            android:src="@drawable/searchicon"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/x10dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:drawableEnd="@drawable/notification"
            android:drawablePadding="@dimen/x10dp"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:textColor="@color/c_white"
            android:visibility="invisible" />

        <com.tekrevol.arrowrecovery.widget.AnyTextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Your Title"
            android:textColor="#000"
            android:textSize="@dimen/s15"
            android:visibility="invisible"
            app:typeface="@string/font_bold" />


        <ImageView
            android:id="@+id/imgTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/arrowreclogonav"
            android:visibility="gone" />


        <TextView
            android:id="@+id/txtCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x9dp"
            android:background="@drawable/cart_circle"
            android:clickable="false"
            android:gravity="center"
            android:text="00"
            android:textColor="#f00"
            android:textSize="8sp"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/btnRight1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_toLeftOf="@id/btnRight1"
            android:padding="@dimen/x5dp"
            android:src="@drawable/b_home_icon"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/btnRight3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_toLeftOf="@id/btnRight2"
            android:padding="@dimen/x5dp"
            android:src="@drawable/imgsearch"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnRightSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnRight2"
            android:padding="@dimen/x10dp"
            android:layout_marginLeft="@dimen/x10dp"
            android:src="@drawable/searchicon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btnRightNotification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnRight2"
            android:padding="@dimen/x10dp"
            android:src="@drawable/notification_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btnRight2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x8dp"
            android:background="@color/transparent"
            android:drawableEnd="@drawable/notification_icon"
            android:drawablePadding="@dimen/x5dp"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:textColor="@color/c_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btnRight5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10dp"
            android:background="@color/transparent"
            android:drawablePadding="@dimen/x5dp"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:text="SAVE"
            android:textColor="@color/green_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtClearAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x5dp"
            android:gravity="center"
            android:padding="@dimen/x5dp"
            android:text="Logout"
            android:textColor="#fff"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>